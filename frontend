<input type="file" id="video" accept="video/*">
<button onclick="upload()">Upload & Process</button>

<div class="progress"><div class="bar" id="bar"></div></div>
<p id="status"></p>
</div>

<script>
function upload(){
  const f=document.getElementById("video").files[0];
  if(!f){alert("Select video");return}
  document.getElementById("status").innerText="Processing...";
  let p=0,bar=document.getElementById("bar");
  let i=setInterval(()=>{
    p+=5;bar.style.width=p+"%";
    if(p>=100){clearInterval(i);document.getElementById("status").innerText="Done";}
  },400);
}
</script>

